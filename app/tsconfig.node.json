{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "tailwind.config.*",
    "src/*.ts",
    "src/main/**/*",
    "src/preload/**/*",
    "server_tests/"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node", "vitest/globals"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
