{
  "name": "securedrop-app",
  "version": "0.0.1",
  "description": "Graphical desktop app for SecureDrop",
  "productName": "SecureDrop",
  "main": "./out/main/index.js",
  "author": {
    "name": "SecureDrop Team",
    "email": "securedrop@freedom.press"
  },
  "homepage": "https://securedrop.org",
  "scripts": {
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "test": "vitest run --config vitest.config.ts --project=unit --coverage",
    "integration-test": "vitest run --config vitest.config.ts --project=integration --coverage",
    "server-test": "vitest run --config vitest.config.ts --project=server --coverage --no-file-parallelism",
    "fix": "eslint --fix . && prettier --write .",
    "lint": "prettier . --check && eslint --max-warnings 0 . && pnpm run typecheck",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:web",
    "build": "electron-vite build",
    "postinstall": "./scripts/download-sqlite-binaries.py",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:linux": "pnpm run build && electron-builder --linux",
    "dbmate": "sh -c 'dbmate --url sqlite:$HOME/.config/SecureDrop/db.sqlite --migrations-dir ./src/main/database/migrations --schema-file ./src/main/database/schema.sql \"$@\"' _",
    "translator-screenshots": "pnpm run build && rm -rf ./screenshots && mkdir -p ./screenshots && node ./scripts/translator-screenshots/main.js",
    "test-data-generate": "./scripts/test-data-generate.py",
    "test-data-insert": "./scripts/test-data-insert.sh"
  },
  "keywords": [],
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.55.0",
    "@sapphire/snowflake": "^3.5.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/better-queue": "^3.8.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.13",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/react-window": "^1.8.8",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "electron": "37.3.1",
    "electron-builder": "^26.0.12",
    "electron-devtools-installer": "^4.0.0",
    "electron-vite": "^4.0.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-i18next": "^6.1.3",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "jsdom": "^26.1.0",
    "otpauth": "^9.4.1",
    "prettier": "3.6.0",
    "testcontainers": "^11.2.1",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.0",
    "vite": "^7.0.8",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@ant-design/v5-patch-for-react-19": "^1.0.3",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@reduxjs/toolkit": "^2.8.2",
    "@tailwindcss/vite": "^4.1.12",
    "antd": "^5.27.0",
    "better-queue": "^3.8.12",
    "better-sqlite3": "^12.2.0",
    "blakejs": "^1.2.1",
    "dbmate": "^2.28.0",
    "i18next": "^25.3.6",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.6.1",
    "react-redux": "^9.2.0",
    "react-router": "^7.8.1",
    "react-window": "^1.8.11",
    "source-map-support": "^0.5.21",
    "tailwindcss": "^4.1.12"
  },
  "packageManager": "pnpm@10.14.0+sha512.ad27a79641b49c3e481a16a805baa71817a04bbe06a38d17e60e2eaee83f6a146c6a688125f5792e48dd5ba30e7da52a5cda4c3992b9ccf333f9ce223af84748"
}
